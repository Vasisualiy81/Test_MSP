<Window x:Class="WpfApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApplication"
        mc:Ignorable="d"
        Title="Chess  by Don Vasiliy  SP-2911" Height="400" Width="800" ResizeMode="NoResize">
    <Window.Background>
        <ImageBrush ImageSource="Images/Chess_in_the_desert.jpg"/>
    </Window.Background>
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="86*"/>
        </Grid.RowDefinitions>
        <Grid.Background >
            <ImageBrush/>
        </Grid.Background>
        <Menu >
            <MenuItem Header="Options" FontSize="15" >
                <MenuItem Header="Start Game" FontSize="15" Click="MenuItem_Click"/>
            </MenuItem>
            <MenuItem Header="It was added for Test_MSP on Github" FontSize="15" />
        </Menu>
    </Grid>
</Window>
